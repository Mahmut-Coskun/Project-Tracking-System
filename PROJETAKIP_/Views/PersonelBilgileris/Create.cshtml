@model PROJETAKIP_.Models.Personel.PersonelBilgileri

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*Date gün ay yıl şeklinde olmazsa kayıt etmiyor*@






@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="card mb-4">
            <h5 class="card-header">PERSONEL EKLE</h5>
            <hr class="my-0">
            <div class="card-body">
                <form id="formAccountSettings" method="POST" onsubmit="return false">
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.AdSoyad, htmlAttributes: new { @class = "control-label col-md-6" })

                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i></span>
                                <input class="form-control" type="text" id="AdSoyad" name="AdSoyad" placeholder="AdSoyad">
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.PersonelGörseli, htmlAttributes: new { @class = "control-label col-md-6" })

                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i></span>
                                <input class="form-control" type="text" id="PersonelGörseli" name="PersonelGörseli" placeholder="PersonelGörseli">
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.Eposta, htmlAttributes: new { @class = "control-label col-md-6" })

                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-envelope"></i></span>
                                <input class="form-control" type="email" id="Eposta" name="Eposta" placeholder="Eposta">
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.Departman, htmlAttributes: new { @class = "control-label col-md-6" })

                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-building"></i></span>
                                @*<input class="form-control" type="text" id="Departman" name="Departman"   placeholder="Departman">*@

                                <select name="Departman" class="form-control" required>
                                    <option value="Seçiniz">Seçiniz</option>
                                    <option value="Yazılım">Yazılım</option>
                                    <option value="Satış">Satış</option>
                                    <option value="Yönetim">Yönetim</option>
                                    <option value="Üretim">Üretim</option>
                                    <option value="Satın Alma">Satın Alma</option>
                                    <option value="Kalite">Kalite</option>
                                    <option value="Muhasebe">Muhasebe</option>
                                    <option value="IK">IK</option>
                                    <option value="İş Geliştirme">İş Geliştirme</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.Gorev, htmlAttributes: new { @class = "control-label col-md-6" })

                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-alarm"></i></span>
                                <select name="Gorev" class="form-control" required>
                                    <option value="Seçiniz">Seçiniz</option>
                                    <option value="Backend Developer">Backend Developer</option>
                                    <option value="Frontend Developer">Frontend Developer</option>
                                    <option value="Fullstack Developer">Fullstack Developer</option>
                                    <option value="ITSorumlusu">ITSorumlusu</option>
                                    <option value="Yazılım Takım Lideri">Yazılım Takım Lideri</option>
                                    <option value="Proje Yöneticisi">Proje Yöneticisi</option>
                                    <option value="Genel Müdür">Genel Müdür</option>
                                    <option value="Genel Müdür Yardımcısı">Genel Müdür Yardımcısı</option>
                                    <option value="CEO">CEO </option>
                                    <option value="Fabrika Müdürü">Fabrika Müdürü</option>
                                    <option value="Yönetim Temsilcisi">Yönetim Temsilcisi</option>
                                    <option value="Dış Ticaret Sorumlusu">Dış Ticaret Sorumlusu</option>
                                    <option value="Satın Alma Personeli">Satın Alma Personeli</option>
                                    <option value="Kalite Personeli">Kalite Personeli</option>
                                    <option value="Muhasebe Personeli">Muhasebe Personeli</option>
                                    <option value="IK Personeli">IK Personeli</option>
                                    <option value="İş Geliştirme Personeli">İş Geliştirme Personeli</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.TCNO, htmlAttributes: new { @class = "control-label col-md-6" })

                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-alarm"></i></span>
                                <input class="form-control" type="text" id="TCNO" name="TCNO" placeholder="TCNO">
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.Yetki, htmlAttributes: new { @class = "control-label col-md-6" })

                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-adjust"></i></span>
                                <select name="Yetki" class="form-control" required>
                                    <option value="Seçiniz">Seçiniz</option>
                                    <option value="Üst Yönetici">Üst Yönetici</option>
                                    <option value="Yönetim">Yönetim</option>
                                    <option value="Normal">Normal</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.TelNo, htmlAttributes: new { @class = "control-label col-md-6" })

                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-phone"></i></span>
                                <input class="form-control" type="text" id="TelNo" name="TelNo" placeholder="TelNo">
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.Adres, htmlAttributes: new { @class = "control-label col-md-6" })

                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-map"></i></span>
                                <input class="form-control" type="text" id="Adres" name="Adres" placeholder="Adres">
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.DogumTarihi, htmlAttributes: new { @class = "control-label col-md-6" })

                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-phone"></i></span>
                                <input class="form-control" type="datetime" id="DogumTarihi" name="DogumTarihi" placeholder="DogumTarihi">
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.IseGirisTarihi, htmlAttributes: new { @class = "control-label col-md-6" })

                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-phone"></i></span>
                                <input class="form-control" type="datetime" id="IseGirisTarihi" name="IseGirisTarihi" placeholder="IseGirisTarihi">
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.MedeniHal, htmlAttributes: new { @class = "control-label col-md-6" })

                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-select-multiple"></i></span>
                                <select name="MedeniHal" class="form-control" required>
                                    <option value="Seçiniz">Seçiniz</option>
                                    <option value="Bekar">Bekar</option>
                                    <option value="Evli">Evli</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.Sifre, htmlAttributes: new { @class = "control-label col-md-6" })

                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-paste"></i></span>
                                <input class="form-control" type="password" id="Sifre" name="Sifre" placeholder="Sifre">
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.PozisyonAcıklama, htmlAttributes: new { @class = "control-label col-md-6" })

                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bxs-comment"></i></span>
                                <input class="form-control" type="text" id="PozisyonAcıklama" name="PozisyonAcıklama" placeholder="PozisyonAcıklama">
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.YakinBilgisi, htmlAttributes: new { @class = "control-label col-md-6" })

                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bxs-bookmark"></i></span>
                                <select name="YakinBilgisi" class="form-control" required>
                                    <option value="Seçiniz">Seçiniz</option>
                                    <option value="Eşi">Eşi</option>
                                    <option value="Babası">Babası</option>
                                    <option value="Annesi">Annesi</option>
                                    <option value="Kardeşi">Kardeşi</option>
                                    <option value="Çocuğu">Çocuğu</option>
                                    <option value="Diğer">Diğer</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.YakinAdSoyad, htmlAttributes: new { @class = "control-label col-md-6" })

                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bxs-bookmark"></i></span>
                                <input class="form-control" type="text" id="YakinAdSoyad" name="YakinAdSoyad" placeholder="YakinAdSoyad">
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.YakinTC, htmlAttributes: new { @class = "control-label col-md-6" })

                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bxs-bookmark"></i></span>
                                <input class="form-control" type="text" id="YakinTC" name="YakinTC" placeholder="YakinTC">
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.YakinTel, htmlAttributes: new { @class = "control-label col-md-6" })

                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bxs-phone"></i></span>
                                <input class="form-control" type="text" id="YakinTel" name="YakinTel" placeholder="YakinTel">
                            </div>
                        </div>


                    </div>
                    <div class="mt-2">
                        <button type="submit" class="btn btn-primary me-2">Personel Oluştur</button>
                        <a href="/PersonelBilgileris/Index/" type="reset" class="btn btn-primary me-2">Anasayfaya Dön</a>
                    </div>

                </form>
            </div>
        </div>
        <!-- /Account -->
    </div>
}


